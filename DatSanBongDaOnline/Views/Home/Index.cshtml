                            <div class="price-number">
                                <p><span class="rupees">@String.Format("{0:0,0 vnđ}", item.DonGia)@*@(item.DonGia.HasValue ? item.DonGia.Value.ToString("N0") : "Liên hệ")*@</span></p>
