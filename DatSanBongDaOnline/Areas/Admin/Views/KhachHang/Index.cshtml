


@model PagedList.IPagedList<Model.EF.khachhang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách Khách Hàng</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "KhachHang", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/KhachHang/Create">Thêm mới</a>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Mã Khách Hàng</th>
                                <th>Họ</th>
                                <th>Tên</th>
                                <th>Email</th>
                                <th>IDKH</th>
                                <th>Địa chỉ</th>
                                <th>SDT</th>
                                <th>Password</th>
                                <th>Sửa|Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.MaKH">
                                    <td>@item.MaKH</td>
                                    <td>@item.Ho</td>
                                    <td>@item.Ten</td>
                                    <td>@item.Email</td>
                                    <td>@item.IDKH</td>
                                    <td>@item.DiaChi</td>
                                    <td>@item.SDT</td>
                                    <td>@item.Password</td>
                                    @*<td><a href="#" class="btn-active" data-id="@item.MaNV">@Html.Raw(item.Ten ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>*@
                                    <td>
                                        <a href="/Admin/KhachHang/Edit?makh=@item.MaKH">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.MaKH }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.MaKH + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>