



@model PagedList.IPagedList<Model.EF.San>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách Sân</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "San", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/San/Create">Thêm mới</a>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Mã Sân</th>
                                <th>Ten Sân</th>
                                <th>Đơn giá </th>
                                <th>Image </th>
                                <th>IDLoai</th>
                                <th>Hot</th>
                                <th>Mã Khuyến Mãi</th>
                                <th>Số Lượng</th>
                                
                                
                                <th>Sửa|Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.MaSan">
                                    <td>@item.MaSan</td>
                                    <td>@item.TenSan</td>
                                    <td>@item.DonGia</td>
                                    <td>@item.Image</td>
                                    <td>@item.IDLoai</td>
                                    <td>@item.Hot</td>
                                    <td>@item.MaKM</td>
                                    <td>@item.SoLuong</td>
                                   
                                    
                                    @*<td><a href="#" class="btn-active" data-id="@item.MaNV">@Html.Raw(item.Ten ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>*@
                                    <td>
                                        <a href="/Admin/San/Edit?masan=@item.MaSan">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.MaSan }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.MaSan + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>